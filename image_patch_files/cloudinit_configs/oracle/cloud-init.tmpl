
# if you don't care about loosing your own modification, remove
# /etc/cloud/.cloud.dat to auto-recreate this file in next boot-up

# The top level settings are used as module
# and system configuration.

# A set of users which may be applied and/or used by various modules
# when a 'default' entry is found it will reference the 'default_user'
# from the distro configuration specified below
users:
    - admin

# If this is set, 'root' will not be able to ssh in and they
# will get a message to login instead as the above $user (admin)
disable_root: false

# This will cause the set+update hostname module to not operate (if true)
preserve_hostname: true

# Do not modify the line below (modified by vadc-init)
datasource_list: ['OpenStack']
datasource:
  OpenStack:
    metadata_urls: ['http://169.254.169.254']
    timeout: 10
    max_wait: 20

# The modules that run in the 'init' stage
cloud_init_modules:
 # - migrator
@perl_begin
    print " #" if 'UNIX_CONFIG_CLOUDINIT_REPLACE_HASBOOTCMD' ne 'true';
    print " - bootcmd\n";
@perl_end
 - write-files
 # - growpart
 # - resizefs
 # - set_hostname
 # - update_hostname
 # - update_etc_hosts
 # - ca-certs
 # - rsyslog
 # - users-groups
 - ssh

# The modules that run in the 'config' stage
@perl_begin
    print "# " if 'UNIX_CONFIG_CLOUDINIT_REPLACE_HASCONFIGMODULES' ne 'true';
    print "cloud_config_modules:\n";
    print " - set-passwords\n";
    print " - tmos-configdrive-openstack\n";
    print " - tmos-static-mgmt\n";
    print " - tmos-dhcpv4-tmm\n";
    print " - tmos-declared\n";
@perl_end
 # Emit the cloud config ready event
 # this can be used by upstart jobs for 'start on cloud-config'.
 # - emit_upstart
 # - ssh-import-id
 # - locale
 # - timezone
@perl_begin
    print " #" if 'UNIX_CONFIG_CLOUDINIT_REPLACE_HASRUNCMD' ne 'true';
    print " - runcmd\n";
@perl_end
 # - disable-ec2-metadata
 # - set-passwords
 # - landscape
 # - puppet
 # - chef
 # - salt-minion
 # - mcollective
 # - byobu

# The modules that run in the 'final' stage
cloud_final_modules:
 # - rightscale_userdata
 - scripts-per-once
 - scripts-per-boot
 - scripts-per-instance
 - scripts-user
 - final-message
 # - power-state-change
 # - ssh-authkey-fingerprints
 # - keys-to-console
 # - phone-home

# System and/or distro specific settings
# (not accessible to handlers/transforms)
system_info:
   paths:
      cloud_dir: /opt/cloud/
      templates_dir: /etc/cloud/templates/
      upstart_dir: /etc/init/
   ssh_svcname: sshd
